# AI Email Engine Configuration

# IMAP (Proton Mail Bridge)
IMAP_HOST=127.0.0.1
IMAP_PORT=1143
IMAP_USER=your-email@protonmail.com
IMAP_PASSWORD=your-bridge-password
IMAP_USE_SSL=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_email_engine

# Redis
REDIS_URL=redis://localhost:6379/2

# Ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:14b

# Sync Settings
SYNC_INTERVAL_MINUTES=5
SYNC_FOLDERS=INBOX,Sent,Archive
INITIAL_SYNC_LIMIT=5000

# API
API_HOST=0.0.0.0
API_PORT=8400

# Frontend
FRONTEND_PORT=3100
